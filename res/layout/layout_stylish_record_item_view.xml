<com.ken.bookingview.StylishTimesheetItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="18dp" >

    <TextView
        android:id="@+id/stylish_record_item_hour_of_day"
        android:layout_width="@dimen/record_item_identity_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#7A7A7A"
        android:textSize="15sp"
        android:textStyle="bold" >
    </TextView>

    <View
        android:layout_width="@dimen/record_item_division_width"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:background="#4CB2B2B2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="17dp"
        android:paddingTop="16dp" >

        <LinearLayout
            android:id="@+id/stylish_record_item_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/record_item_gap_between_service_type_and_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/stylish_record_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6063A8"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

</com.ken.bookingview.StylishTimesheetItemView>